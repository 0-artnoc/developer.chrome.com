{% extends "layouts/base.njk" %}

{# toc defines the table of contents that appears to the left of the documentation. #}
{% set toc = docs[project_key].toc %}

{% block title_bar %}
  {% include 'partials/breadcrumbs.njk' %}
{% endblock %}

{% block content %}
  <div class="display-flex">
    {% include 'partials/navigation-tree.njk' %}

    <article class="stack measure-long type center-margin width-full pad-400">
      
      <div class="stack flow-space-200">
        {% include 'partials/post-headline.njk' %}
      </div>

      {% if authors %}
        <div class="stack-exception-700">
          {% include 'partials/authors.njk' %}
        </div>
      {% endif %}

      {{ content | safe }}
    </article>

    {% include 'partials/toc.njk' %}
  </div>
{% endblock %}