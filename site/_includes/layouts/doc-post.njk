{% extends "layouts/base.njk" %}

{% block title_bar %}
  {% include 'partials/breadcrumbs.njk' %}
{% endblock %}

{% block content %}
  <div class="display-flex">
    {% include 'partials/navigation-tree.njk' %}

    <article class="post stack measure-long width-full pad-400">
      <div class="stack flow-space-200">
        {% include 'partials/post-headline.njk' %}
      </div>

      {% if authors %}
        <div class="stack-exception-700">
          {% include 'partials/post-authors.njk' %}
        </div>
      {% endif %}

      <div class="toc-container display-block xl:display-none">
        {% include 'partials/toc.njk' %}
      </div>

      {% include 'partials/draft.njk' %}

      <div class="stack type center-images">
        {{ content | safe }}
      </div>
    </article>


    <div class="toc-container display-none xl:display-block pad-left-400 pad-right-400">
      {% include 'partials/toc.njk' %}
    </div>
    
  </div>
{% endblock %}