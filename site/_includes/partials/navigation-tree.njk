<navigation-tree role="navigation" class="flex-shrink-none" aria-label="{{ 'i18n.common.project_docs' | i18n(locale) }}" tabindex="-1">
  <div class="display-flex lg:display-none align-center pad-200 hairline-bottom">
    <button class="navigation-tree__back button display-flex align-center justify-center width-700 height-700" aria-label="back">
      {% include 'icons/arrow-back.svg' %}
    </button>
    <div class="navigation-tree__title pad-left-200 pad-right-200 user-select-none">{{ project_name }}</div>
  </div>

  <div class="display-flex direction-column pad-top-300">
    {# Render nested sections. #}
    {% from 'macros/navigation-tree-sections.njk' import navigationTreeSections with context %}
    {{ navigationTreeSections(toc) }}
  </div>
</navigation-tree>